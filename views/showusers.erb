<div class="container mt-5 mb-5 col-8">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Username</th>
        <th scope="col">Phone</th>
        <th scope="col">Date / Time</th>
        <th scope="col">Barber</th>
        <th scope="col">Color</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |row| %>
        <tr>
          <td><%= row['id'] %></td>
          <td><%= row['username'] %></td>
          <td><%= row['phone'] %></td>
          <td><%= row['datestamp'] %></td>
          <td><%= row['barber'] %></td>
          <td><%= row['color'] %></td>
        </tr>
      <% end %>      
    </tbody>
  </table>
</div>
